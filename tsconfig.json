{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", // Ou "react" se estiver usando uma vers√£o anterior
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true, // Habilita a interoperabilidade do ES Module
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["src"]
}
